<aura:component controller="CampingListController">
    <!-- Vamos a enviar un evento hacia campingList -->
    <!-- El name debe coincidir tanto el sender (campingListForm) como receiver (campingList) -->
    <!-- type == nombre del evento creado, en este caso, addItemEvent -->
    <aura:registerEvent name="addItem" type="c:addItemEvent"/>

    <!-- Item de prueba -->
    <aura:attribute name="newItem" type="Camping_Item__c"
         default="{ 'sobjectType': 'Camping_Item__c',
                        'Name': '',
                        'Price__c': 0,
                        'Quantity__c': 1,
                        'Packed__c': false}"/>
    
    <!-- CREATE NEW ITEM -->
    <div aria-labelledby="newitemform">
        <!-- BOX AREA -->
        <fieldset class="slds-box slds-theme_default slds-container_small">
            <legend id="newitemform" class="slds-text-heading_small slds-p-vertical_medium">
                Add Item
            </legend>
            <!-- CREATE NEW ITEM FORM -->
            <form class="slds-form_stacked">     
                <lightning:input aura:id="itemform"
                                 required="true"
                                 label="Name"
                                 name="itemname"
                                 placeholder="Enter your name"
                                 value="{!v.newItem.Name}"/> 
                
                <lightning:input aura:id="itemform"
                                 formatter="currency"
                                 label="Price"
                                 name="itemprice"
                                 value="{!v.newItem.Price__c}"/> 
                
                <lightning:input aura:id="itemform"
                                 type="number"
                                 min="1"
                                 label="Quantity"
                                 required="true"
                                 name="itemquantity"
                                 value="{!v.newItem.Quantity__c}"
                                 messageWhenRangeUnderflow="Enter minimum 1 Quantity"/>
                
                <lightning:input aura:id="itemform"
                                 type="checkbox"
                                 label="Packed"
                                 name="itempacked"
                                 checked="{!v.newItem.Packed__c}"/>  
                
                <lightning:button label="Create Item"
                                  class="slds-m-top_medium"
                                  variant="brand"
                                  onclick="{!c.clickCreateItem}"/>               
            </form>
            <!-- / CREATE NEW ITEM FORM -->
        </fieldset>
        <!-- / BOX AREA -->        
    </div>
    <!-- / CREATE NEW ITEM -->
</aura:component>